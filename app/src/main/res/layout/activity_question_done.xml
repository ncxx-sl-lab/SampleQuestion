<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <!--回答結果-->
    <TextView
        android:text="@string/text_thank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_thank"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/id_first_day_score_text"
        android:layout_below="@+id/id_thank"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/id_second_day_score_text"
        android:layout_below="@+id/id_first_day_score_text"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>
